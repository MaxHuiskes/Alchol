{# templates/cocktail/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Cocktails{% endblock %}

{% block body %}

<h1>Select available ingredients</h1>

{{ form_start(form) }}
    
<div id="alcohol_selection_alcohol">
    {% for child in form.alcohol %}

    <div class="checkbox-pair">
        <label>
            {{ form_widget(child) }}
            {{ form_label(child) }}
        </label>
    </div>

    {% endfor %}
</div>
    <button type="submit">Check Cocktails</button>
{{ form_end(form) }}

<p style="font-size=10px"> 1oz = 30ml </p>

<h2>You can make:</h2>
<ul>
    {% for recipe in canMake %}
        <li class="cocktail">
            <a href="{{ path('cocktail_show', {id: recipe.id}) }}">{{ recipe.name }}</a>
        </li>
    {% else %}
        <li>No cocktails you can make</li>
    {% endfor %}
</ul>

<h2>Almost can make (missing 1 ingredient):</h2>
<ul>
    {% for item in almost %}
        <li class="cocktail">
            <a href="{{ path('cocktail_show', {id: item.recept.id}) }}">{{ item.recept.name }}</a>
        </li>
    {% else %}
        <li>No almost-makeable cocktails</li>
    {% endfor %}
</ul>

<h2>Contains some of the ingredients:</h2>
<ul>
    {% for item in containsSome %}
        <li class="cocktail">
            <a href="{{ path('cocktail_show', {id: item.recept.id}) }}">{{ item.recept.name }}</a>
        </li>
    {% else %}
        <li>No cocktails that contains some of the ingredient</li>
    {% endfor %}
</ul>

<strong style="font-size:20px;">Have a new or different recipe? Want to add the recipe? Send the recipe to <a href="mailto:booze@printbears.nl">booze@printbears.nl</a></strong> 

{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
  
.checkbox-pair {
    display: flex; 
    align-items: center;
    gap: 5px; 
}

.checkbox-pair label {
    display: flex;
    align-items: center;
    gap: 5px; /* space between checkbox and label text */
}

#alcohol_selection_alcohol {
    display: grid;
    grid-template-rows: repeat(20, auto); /* how many rows per column */
    grid-auto-flow: column; /* fill top to bottom, then left to right */
    gap: -1.5rem 1rem;
    max-width: 800px;
    margin-bottom: 1rem;
    grid-auto-columns: 160px;
}

/* Bigger checkboxes */
#alcohol_selection_alcohol input[type="checkbox"] {
    transform: scale(1.2);
    margin-right: 0.25rem;
    max-width: 40px;
    min-width: 40px;
    min-height: 40px;
    max-height: 40px;
    width: 40px;
    height: 40px;
}


/* Align label nicely 
#alcohol_selection_alcohol label {
    display: inline-block;
    margin: 0;
    align-content: center;
}*/

/* Headings styling */
h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #2c3e50;
}

h2 {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
    color: #34495e;
    border-bottom: 2px solid #ddd;
    padding-bottom: 0.25rem;
}

/* Lists styling */
ul {
    list-style: none;
    padding-left: 0;
}

li.cocktail {
    background: #f9f9f9;
    margin-bottom: 0.5rem;
    padding: 0.5rem 0.75rem;
    border-radius: 5px;
    transition: background 0.3s;
}

ul li.cocktail:hover {
    background: #e0f7fa;
}

/* Links inside lists */
ul li.cocktail a {
    text-decoration: none;
    color: #007bff;
    font-weight: 500;
}

ul li.cocktail a:hover {
    text-decoration: underline;
}

/* Button styling */
button[type="submit"] {
    padding: 0.5rem 1rem;
    font-size: 1rem;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
}

button[type="submit"]:hover {
    background-color: #0056b3;
}
</style>
{% endblock %}
