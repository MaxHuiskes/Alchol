{# templates/recept/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Cocktails{% endblock %}

{% block body %}

<h1>{{ recept.name }}</h1>

<h2>Ingredients</h2>
<ul>
    {% for alcohol in recept.alcohol %}
        <li>{{ alcohol.name }}</li>
    {% else %}
        <li>No ingredients listed</li>
    {% endfor %}
</ul>

{% if recept.recept %}
    <h2>Instructions</h2>
    <p>{{ recept.recept }}</p>
{% endif %}

<a href="{{ path('cocktail_index') }}">Back to list</a>

{% endblock %}
