{% extends 'base.html.twig' %}

{% block title %}{{ recept.name }}{% endblock %}

{% block body %}

<h1>{{ recept.name }}</h1>

<h2>Ingredients</h2>
<ul class="ingredient-list">
    {% for alcohol in recept.alcohol %}
        <li>{{ alcohol.name }}</li>
    {% else %}
        <li>No ingredients listed</li>
    {% endfor %}
</ul>

{% if recept.recept %}
    <h2>Instructions</h2>
    <p class="instructions">{{ recept.recept|nl2br }}</p>
{% endif %}


<a href="{{ path('cocktail_index') }}" class="back-link">‚Üê Back to list</a>

{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
/* Headings */
h1 {
    font-size: 2rem;
    color: #4B2E2E;
    margin-bottom: 1rem;
}

h2 {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 0.5rem;
    color: #4B2E2E;
    border-bottom: 2px solid #D97706;
    padding-bottom: 0.25rem;
}

/* Ingredient list */
.ingredient-list {
    list-style: none;
    padding-left: 0;
}

.ingredient-list li {
    background: #FFF8F0;
    margin-bottom: 0.5rem;
    padding: 0.5rem 0.75rem;
    border-radius: 5px;
    transition: background 0.3s;
    border: 1px solid #D97706;
}

.ingredient-list li:hover {
    background: #FFD700;
}

/* Instructions */
.instructions {
    background: #FFF8F0;
    padding: 1rem;
    border-left: 4px solid #D97706;
    border-radius: 5px;
    line-height: 1.5;
}

/* Back link */
.back-link {
    display: inline-block;
    margin-top: 2rem;
    padding: 0.5rem 1rem;
    background-color: #D97706;
    color: #FFF8F0 !important;
    text-decoration: none;
    border-radius: 5px;
    transition: background 0.3s;
}

.back-link:hover {
    background-color: #FFD700;
    color: #4B2E2E !important;
}
</style>
{% endblock %}
